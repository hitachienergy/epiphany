resource "azurerm_availability_set" "{{ specification.name }}" {
 name                         = "{{ specification.name }}"
 location                     = "${azurerm_resource_group.rg.location}"
 resource_group_name          = "${azurerm_resource_group.rg.name}"
 platform_fault_domain_count  = {{ specification.platform_fault_domain_count }}
 platform_update_domain_count = {{ specification.platform_update_domain_count }}
 managed                      = {{ specification.managed | string | lower }}
}
