resource "aws_security_group_rule" "{{ specification.name }}" {
  type            = "{{ specification.type }}"
  from_port       = {{ specification.from_port }}
  to_port         = {{ specification.to_port }}
  protocol        = "{{ specification.protocol }}"

  # Opening to 0.0.0.0/0 can lead to security vulnerabilities.
  cidr_blocks = ["{{ specification.cidr_blocks }}"]

  security_group_id = "${ {{ specification.security_group_name }}.id}"
}