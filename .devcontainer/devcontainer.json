{
    "name": "epicli",
    "dockerFile": "Dockerfile",
    "extensions": [
        // Ansible
        "redhat.ansible",
        // Common
        "shardulm94.trailing-spaces",
        // Jinja
        "samuelcolvin.jinjahtml",
        // Markdown
        "davidanson.vscode-markdownlint",
        // Python
        "ms-python.python",
        "littlefoxteam.vscode-python-test-adapter",
        // Ruby
        "rebornix.Ruby",
        "castwide.solargraph",
        // Shell
        "timonwong.shellcheck",
        // Terraform
        "hashicorp.terraform",
        // YAML
        "redhat.vscode-yaml",
    ],
    "settings": {
        "python.pythonPath": "/usr/local/bin/python"
    },
    "runArgs": [ "-u", "vscode" ]
}
